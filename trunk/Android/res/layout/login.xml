<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

	<TableLayout 
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	>
		<TextView android:text="@string/name_label" android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:text="@string/pass_text" android:layout_width="wrap_content" android:id="@+id/EditText02" android:layout_height="wrap_content"></EditText>
	</TableLayout>
	
	<TableLayout 
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	>
	<TextView android:text="@string/pass_label" android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<EditText android:password="true" android:text="@string/name_text" android:layout_width="wrap_content" android:id="@+id/EditText01" android:layout_height="wrap_content"></EditText>
	</TableLayout>
	

	<Button android:text="@string/autentificare" android:layout_height="wrap_content" android:id="@+id/Button01" android:layout_width="wrap_content"></Button>


</LinearLayout>
